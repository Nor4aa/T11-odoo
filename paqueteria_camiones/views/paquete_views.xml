<odoo>
    <record id="view_paquete_form" model="ir.ui.view">
        <field name="name">paqueteria.paquete.form</field>
        <field name="model">paqueteria.paquete</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="remitente_id"/>
                        <field name="destinatario_id"/>
                        <field name="direccion_entrega"/>
                        <field name="camion_id"/>
                    </group>

                    <notebook>
                        <page string="Seguimiento">
                            <field name="actualizaciones_ids">
                                <tree editable="bottom">
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                    <field name="notas"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
