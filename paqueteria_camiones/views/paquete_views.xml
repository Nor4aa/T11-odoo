<odoo>
    <record id="view_paquete_form" model="ir.ui.view">
        <field name="name">paqueteria.paquete.form</field>
        <field name="model">paqueteria.paquete</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="remitente_id"/>
                        <field name="destinatario_id"/>
                        <field name="direccion_entrega"/>
                        <field name="camion_id"/>
                    </group>

                    <notebook>
                        <page string="Seguimiento">
                            <field name="actualizaciones_ids">
                                <list>
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                    <field name="notas"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- ACCIÓN -->
    <record id="action_paqueteria_paquete" model="ir.actions.act_window">
        <field name="name">Paquetes</field>
        <field name="res_model">paqueteria.paquete</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENÚ -->
    <menuitem
        id="menu_paqueteria_root"
        name="Paquetería"
        action="action_paqueteria_paquete"
    />

</odoo>

