<odoo>
<data>
    <record id="view_seguimiento_list" model="ir.ui.view">
        <field name="name">paqueteria.seguimiento.list</field>
        <field name="model">paqueteria.seguimiento</field>
        <field name="arch" type="xml">
            <list>
                <field name="paquete_id"/>
                <field name="fecha"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

    <record id="view_seguimiento_form" model="ir.ui.view">
        <field name="name">paqueteria.seguimiento.form</field>
        <field name="model">paqueteria.seguimiento</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="paquete_id"/>
                        <field name="fecha"/>
                        <field name="estado"/>
                        <field name="notas"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</data>
</odoo>
